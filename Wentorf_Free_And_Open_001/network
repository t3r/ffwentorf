
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'wan6'
	option proto 'dhcpv6'
	option sourcefilter '0'
	option ifname 'br-wan'
	option ip6table '1'
	option peerdns '0'

config globals 'globals'
	option ula_prefix 'fd37:b207:6453::/48'

config interface 'wan'
	option igmp_snooping '0'
	# WAN-Traffic über VLAN7 senden/empfangen
	option ifname 'eth0.7'
	option auto '1'
	option peerdns '0'
	option type 'bridge'
	option proto 'dhcp'
	option macaddr '02:1a:99:5b:df:e7'

config rule6 'wan6_lookup'
	option mark '0x01/0x01'
	option lookup '1'

config route6 'wan6_unreachable'
	option type 'unreachable'
	option table '1'
	option target '::/0'
	option metric '65535'
	option gateway '::'
	option interface 'loopback'

config interface 'client'
	option type 'bridge'
	option macaddr '00:19:99:5b:df:e7'
	list ifname 'bat0'
	option proto 'dhcpv6'
	option reqprefix 'no'
	option igmp_snooping '0'
	option peerdns '1'
	option sourcefilter '0'

config interface 'bat0'
	option ifname 'bat0'
	option macaddr '00:19:99:5b:df:e7'
	option proto 'none'

config interface 'mesh_wan'
	option ifname 'br-wan'
	option mesh 'bat0'
	option proto 'batadv'
	option auto '1'

config interface 'mesh_vpn'
	option ifname 'mesh-vpn'
	option mesh_no_rebroadcast '1'
	option macaddr '02:1d:99:5b:df:e7'
	option mesh 'bat0'
	option proto 'batadv'

config device 'local_node_dev'
	option macaddr '00:5b:27:80:00:01'
	option ifname 'br-client'
	option name 'local-node'
	option type 'macvlan'

config interface 'local_node'
	option ifname 'local-node'
	option ipaddr '10.144.0.1'
	option ip6addr 'fddf:0bf7:80::a38:1/128'
	option netmask '255.255.240.0'
	option proto 'static'

config route6 'local_node_route6'
	option target 'fddf:0bf7:80::/64'
	option gateway '::'
	option interface 'client'

# mesh on lan einstellen über VLAN1
config interface 'mesh_lan'
	option ifname 'eth0.1'
	option macaddr 'B6:28:29:B9:B2:6C'
	option mesh 'bat0'
	option proto 'batadv'
	option auto '1'
